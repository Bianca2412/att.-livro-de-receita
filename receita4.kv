BoxLayout:
    canvas.before:
        Color:
            rgba: 1, 0.498, 0.498,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Label:
        text: 'Receita - Pudim'
        font_size: '50pt'
        color: (0, 0, 0, 1)
    Label:
        text: 'Ingredientes (8 porções)'
        font_size: '40'
        color: (1, 1, 1, 1)
    Label:
        text: '1 lata de leite condensado'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1 lata de leite (medida da lata de leite condensado)'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1 xícara (chá) de açúcar'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1/2 xícara de água'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: 'Modo de preparo : 45min / - massa'
        font_size: '40'
        color: (1, 1, 1, 1)
    Label:
        text: '1. Primeiro, bata bem os ovos no liquidificador.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '2. Acrescente o leite condensado e o leite, e bata novamente..'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: 'Modo de preparo : calda'
        font_size: '40'
        color: (1, 1, 1, 1)
    Label:
        text: '1. Derreta o açúcar na panela até ficar moreno, acrescente a água e deixe engrossar.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '2. Coloque em uma forma redonda e despeje a massa do pudim por cima.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '3. Asse em forno médio por 45 minutos, com uma assadeira redonda dentro de um banho maria.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '4.Espete um garfo para ver se está bem assado..'
        font_size: '30'
        color: (0, 0, 0, 1)    
    Label:
        text: '5.Deixe esfriar e desenforme.'
        font_size: '30'
        color: (0, 0, 0, 1)    