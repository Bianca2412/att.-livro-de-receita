BoxLayout:
    canvas.before:
        Color:
            rgba: 1, 0.498, 0.498,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Label:
        text: 'Receita - Pavê'
        font_size: '50pt'
        color: (0, 0, 0, 1)
    Label:
        text: 'Ingredientes (10 porções)'
        font_size: '40'
        color: (1, 1, 1, 1)
    Label:
        text: '1 pacote de biscoito maizena'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1 lata de leite condensado'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1 creme de leite'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: 'raspas de limão'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '1/2 copo de suco de limão puro'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: 'Modo de preparo : 15min'
        font_size: '40'
        color: (1, 1, 1, 1)
    Label:
        text: '1. Umideça os biscoitos na água.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '2. Forre o pirrex com os biscoitos úmidos .'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '3. Bata no liquidificador a lata de leite condensado, o creme de leite e o suco de limão.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '4. Despeje sobre as bolachas e enfeite com um pouco de raspas de limão. '
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '5. Sirva bem gelado.'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '6. Pronto. Simples e deliciosa.'
        font_size: '30'
        color: (0, 0, 0, 1)